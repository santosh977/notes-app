<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004686"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spinner7"
         android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
       android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner1"
             android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
         android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner2"
           android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
   android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner3"
          android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
       android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner4"
              android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
         android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
        android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner6"
        android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
             android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinner8"
      android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"


             android:layout_margin="@dimen/dim_5"
                android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_1"
            android:gravity="center_vertical"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <EditText
            android:id="@+id/editText1"
        android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
   
            android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_4"
            android:gravity="fill"
              android:layout_margin="@dimen/dim_5"
            android:hint="Professor Name"
            android:inputType="textPersonName" 
     >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
        android:layout_height="@dimen/dim_0"
             android:layout_weight="0.12"
             android:layout_width="match_parent"
             android:textSize="@dimen/dim_11"
            android:padding="@dimen/dim_4"
            android:gravity="fill"
             android:layout_margin="@dimen/dim_5"
            android:hint="Heading"
            android:inputType="textPersonName" />
        
         

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:orientation="horizontal"
                  android:layout_above="@+id/rl2" 
                   android:layout_below="@+id/ll1" 
              >

            <Button
                android:id="@+id/button1"
                android:layout_width="@dimen/dim_43"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_15"
                android:background="@drawable/sign"
                android:onClick="Clik" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.44"
                android:text="Select image :"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <RelativeLayout
             android:id="@+id/rl2"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_4"
            android:layout_marginLeft="@dimen/dim_20"
            android:layout_marginRight="@dimen/dim_20"
            android:background="@android:color/transparent" >

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/dim_90"
                android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/button3"
                     android:layout_marginLeft="@dimen/dim_17"
        android:background="@drawable/rbutton"
                android:onClick="UploadFunc"
                android:text="Upload" 
                android:textColor="@android:color/white"
            android:textSize="@dimen/dim_21" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/dim_75"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView1"
                
                  android:textColor="@android:color/white"
            android:textSize="@dimen/dim_21"
            android:layout_marginLeft="@dimen/dim_40"
                  android:background="@drawable/rbutton"
                android:text="Raw" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dim_70"
                android:layout_height="@dimen/dim_70"
                android:src="@drawable/avatar_contact" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>