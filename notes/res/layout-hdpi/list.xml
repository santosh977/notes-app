<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#004686" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/dim_100"
        android:layout_height="@dimen/dim_80"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar_contact" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_2"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/dim_50"
        android:layout_height="@dimen/dim_40"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/setting" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dim_50"
        android:layout_height="@dimen/dim_40"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView3"
        android:clickable="true"
        android:src="@drawable/download" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dim_21"
        android:layout_toLeftOf="@+id/imageView3"
        android:text="time" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginLeft="@dimen/dim_38"
        android:text="heading" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="name" />

</RelativeLayout>