<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004686" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim_45" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel4"
            android:layout_marginLeft="@dimen/dim_80"
            android:layout_marginTop="@dimen/dim_25" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rel5"
            android:layout_marginTop="@dimen/dim_70" >
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dim_37"
            android:clickable="true"
            android:gravity="center"
            android:onClick="Function9"
            android:text="Sign Up for notes"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/BtnLogin"
            android:layout_width="@dimen/dim_150"
            android:layout_height="@dimen/dim_30"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#FF0000"
            android:gravity="center"
            android:onClick="Function8"
            android:text="Login"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/Editpass"
            android:layout_width="@dimen/dim_300"
            android:layout_height="@dimen/dim_50"
            android:layout_above="@+id/BtnLogin"
            android:layout_alignLeft="@+id/rel4"
            android:layout_marginBottom="@dimen/dim_26"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="@dimen/dim_230"
            android:layout_height="@dimen/dim_1"
            android:layout_alignBottom="@+id/Editpass"
            android:layout_alignLeft="@+id/rel4"
            android:layout_marginLeft="@dimen/dim_90"
            android:background="@android:color/white" >
        </RelativeLayout>

        <EditText
            android:id="@+id/EditMail"
            android:layout_width="@dimen/dim_300"
            android:layout_height="@dimen/dim_50"
            android:layout_above="@+id/Editpass"
            android:layout_alignLeft="@+id/Editpass"
            android:layout_marginBottom="@dimen/dim_25"
            android:background="@android:color/transparent"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="@dimen/dim_230"
            android:layout_height="@dimen/dim_1"
            android:layout_alignBottom="@+id/EditMail"
            android:layout_alignLeft="@+id/EditMail"
            android:background="@android:color/white" >
        </RelativeLayout>

        <TextView
            android:id="@+id/Forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/chkAutosave"
            android:layout_marginTop="@dimen/dim_17"
            android:clickable="true"
            android:onClick="Function10"
            android:text="Forget Password ?"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/chkAutosave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/Forgetpass"
            android:layout_alignTop="@+id/rel6"
            android:text="Remember Me"
            android:textColor="@android:color/secondary_text_dark" />
    </RelativeLayout>

</RelativeLayout>